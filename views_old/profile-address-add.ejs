<!doctype html>
<html>
<head>
	<title>Betify</title>
	<%- include('header.ejs') %>
</head>
<body>
	<%- include('top-navbar.ejs', {user: user}); %>

	<div class="container">

		<div class="page-header text-center">
			<h1><span class="fa fa-user"></span>Add a new address</h1>
		</div>
		<hr>
		<div class="row">
		<!--
		id
		uuid
		user_id
		primary
		address_name
		country
		address
		address2
		city
		prov
		postal_code
		phone
		created
		deleted
		suspended
		modified
		-->

			<!-- NEW ADDRESS FORM -->
			<form action="/profile/address/add/<%= user.id %>" method="post">
				<div class="h4 text-center"><%= user.username %>(ID: <%= user.id %>)</div>

				<fieldset class="form-group">
				<!-- <legend>Primary Address: </legend> -->
					<div class="form-check">
						<label class="form-check-label">
							<input type="radio" class="form-check-input" name="primary_address" id="primary_address1" value="1" checked> Primary address
						</label>
					</div>
 					<div class="form-check">
						<label class="form-check-label">
							<input type="radio" class="form-check-input" name="primary_address" id="primary_address2" value="0"> Non-Primary Address
						</label>
					</div>
				</fieldset>

				<!-- Address name -->
				<div class="form-group">
					<label>Address Name</label>
					<input type="text" class="form-control form-control" name="address_name" placeholder="ex: Mom's Home" required>
				</div>

				<!-- Country -->
				<div class="form-group">
					<label>Country</label>
					<input type="text" class="form-control form-control" name="country" placeholder="中国" required>
				</div>

				<!-- Street address -->
				<div class="form-group">
					<label>Street address</label>
					<input type="text" class="form-control form-control" name="address" placeholder="Street and number, P.O. box, c/o." required>
				</div>
				<div class="form-group">
					<input type="text" class="form-control form-control" name="address2" placeholder="Apartment, suite, unit, building, floor, etc.">
				</div>

				<!-- City, Prov, Postal Code -->
				<div class="row form-group">
					<div class="col-lg-6">
						<label>City</label>
						<input type="text" class="form-control form-control" name="city" required>
					</div>
					<div class="col-lg-3">
						<label>Prov</label>
						<input type="text" class="form-control form-control" name="prov" required>
					</div>
					<div class="col-lg-3">
						<label>Postal code</label>
						<input type="text" class="form-control form-control" name="postal_code" required>
					</div>
				</div>

				<!-- Phone number -->
				<div class="form-group">
					<label>Phone</label>
					<input type="text" class="form-control form-control" name="phone">
				</div>

				<button type="submit" class="btn btn-info">Add Address</button>
			</form>

		</div>

	</div>

<%- include('main-js.ejs') %>
</body>
</html>
